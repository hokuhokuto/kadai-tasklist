<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.submit 'タスク追加' %>
<% end %>