<div class="row">
  <div class="container jumbotron col-sm-6">
  
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= f.label :content, 'タスク内容' %>
        <%= f.text_field :content, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status, class: "form-control" %>
      </div>
      
      <%= f.submit 'タスク追加' , class: "btn btn-primary btn-sm"%>
      
    <% end %>

  
  </div>
</div>