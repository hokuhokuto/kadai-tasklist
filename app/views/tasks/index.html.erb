<h1>タスク一覧</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th class="text-center col-xs-1">ID</th>
      <th class="text-center col-xs-5">タスク</th>
      <th class="text-center col-xs-2">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="text-center"><%= link_to task.id, task %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'タスクの新規追加', new_task_path, class:"btn btn-primary btn-lg" %>